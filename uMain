unit uMain;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TfrmMain = class(TForm)
    lbCEP: TLabel;
    lbDS_END: TLabel;
    eNM_BAIRRO: TEdit;
    lbNM_BAIRRO: TLabel;
    lbNM_CIDADE: TLabel;
    eNM_CIDADE: TEdit;
    eDS_END: TEdit;
    eDS_UF: TEdit;
    lbDS_UF: TLabel;
    eCEP: TEdit;
    btnFechar: TButton;
    lbSCSofttware: TLabel;
    lbAutor: TLabel;
    procedure eCEPExit(Sender: TObject);
    procedure btnFecharClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmMain: TfrmMain;

implementation

uses
  uEndereco;

{$R *.dfm}

procedure TfrmMain.btnFecharClick(Sender: TObject);
begin
  Application.Terminate;
end;

procedure TfrmMain.eCEPExit(Sender: TObject);
var
  _rEndereco: TEndereco;
begin
  inherited;
  eDS_END.Clear;
  eNM_BAIRRO.Clear;
  eNM_CIDADE.Clear;
  eDS_UF.Clear;

  if eCEP.Text = EmptyStr then
    Exit;

  _rEndereco := TEndereco.Create(eCEP.Text);
  try
    eDS_END.Text := _rEndereco.Logradouro;
    eNM_BAIRRO.Text := _rEndereco.Bairro;
    eNM_CIDADE.Text := _rEndereco.Cidade;
    eDS_UF.Text := _rEndereco.UF;
  finally
    _rEndereco.Free;
  end;
end;

end.
